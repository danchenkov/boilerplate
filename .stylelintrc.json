{
    "plugins":
    [
        "stylelint-scss"
    ],
    "extends": [
        "stylelint-scss",
        "stylelint-config-standard",
        "stylelint-config-recommended-scss",
        "stylelint-statement-max-nesting-depth"
    ],
    "rules": {
        "color-hex-case": "lower",
        "indentation": 4,
        "statement-max-nesting-depth": 3
    }
}